{{#partial "content"}}

<div class="row">
    <div class="col-md-8 mb-1">
        <div class="visualisation-boards">
            <ul class="nav nav-tabs mr-auto d-none" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" role="tab" data-toggle="tab" href="#default">default</a>
                </li>
                {{#each hashtagResultsList}}
                <li class="nav-item">
                    <a class="nav-link" role="tab" data-toggle="tab" href="#{{this.hashtagValue}}">{{this.hashtagValue}}</a>
                </li>
                {{/each}}
            </ul>
            <div class="tab-content">
                <div id="default" class="container tab-pane active"><br>
                    <p>Please select a hashtag</p>
                </div>
                {{#each hashtagResultsList}}
                <div id="{{this.hashtagValue}}" class="container tab-pane fade"><br>
                    <img src='data:image/png;base64,{{this.base64WordCloudImage}}' />
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="hashtag-table">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">Hashtags</h5>
                    <hr>
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Hashtag</th>
                            <th scope="col">%</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each hashtagResultsList}}
                        <tr>
                            <th scope="row">{{increment @index}}</th>
                            <td>
                                <div class="radiotext">
                                    <label for="{{this.hashtagValue}}RadioInput">{{this.hashtagValue}}</label>
                                </div>
                            </td>
                            <td></td>
                            <td>
                                <div class="radio">
                                    <label>
                                        <input type="radio" id="{{this.hashtagValue}}RadioInput" name="hashtagRadioGroup"
                                               data-target="#{{this.hashtagValue}}">
                                    </label>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('input[name="hashtagRadioGroup"]').click(function () {
        var target = $(this).data("target");
        console.log($("a[href='"+target+"']"));
        $("a[href='"+target+"']").tab('show');
    });
</script>

{{/partial}}
{{> master}}