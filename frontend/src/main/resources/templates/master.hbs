            <ul class="navbar-nav ml-auto">
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search hashtags/users" id="searchTermValue">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit" id="searchTerm" data-toggle="tooltip" data-placement="bottom" title="Perform search using term">Search</button>
                </form>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a class="nav-link {{pathIsActive this path 'dashboard'}}" href="/" data-toggle="tooltip" data-placement="bottom" title="Return home">Dashboard</a>
                </li>
                <li class="nav-item"><a class="nav-link {{pathIsActive this path 'users'}}" href="/users" data-toggle="tooltip" data-placement="bottom" title="Go to users page">Users</a></li>
                <li class="nav-item"><a class="nav-link {{pathIsActive this path 'hashtags'}}"
                                        href="/hashtags" data-toggle="tooltip" data-placement="bottom" title="Go to hashtags page">Hashtags</a></li>
